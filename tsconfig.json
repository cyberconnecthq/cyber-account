{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib"
  }
}
